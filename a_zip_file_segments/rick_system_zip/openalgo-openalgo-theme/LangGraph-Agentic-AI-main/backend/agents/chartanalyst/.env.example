# ChartAnalyst Configuration

# Redis Configuration (for event bus)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Binance API (for crypto data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here
BINANCE_TESTNET=false

# Alternative crypto data source
CCXT_EXCHANGE=binance

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Analysis Parameters
DEFAULT_TIMEFRAME=1h
DEFAULT_LOOKBACK_PERIODS=100
CONFIDENCE_THRESHOLD=50

# Pattern Detection Sensitivity
VOLUME_SPIKE_THRESHOLD=1.2
VOLATILITY_HIGH_THRESHOLD=3.0
VOLATILITY_MEDIUM_THRESHOLD=1.5

# Technical Analysis
RSI_PERIOD=14
EMA_FAST_PERIOD=9
EMA_MEDIUM_PERIOD=21
EMA_SLOW_PERIOD=50
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# Support/Resistance Detection
SR_WINDOW_SIZE=20
SR_MIN_TOUCHES=2
SR_TOLERANCE_PERCENTAGE=0.01

# Redis Channel Names
MARKET_EVENTS_CHANNEL=market_events
CHARTANALYST_OUTPUT_CHANNEL=chartanalyst_out
AGENT_STATUS_CHANNEL=agent_status

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_DELAY_SECONDS=1

# Data Sources Priority (comma-separated)
DATA_SOURCES_CRYPTO=binance,ccxt
DATA_SOURCES_STOCKS=yfinance
DATA_SOURCES_FOREX=yfinance

# WebSocket Configuration
WEBSOCKET_ENABLED=false
WEBSOCKET_RECONNECT_ATTEMPTS=3
WEBSOCKET_PING_INTERVAL=30
